public void escalateIfMeetsCriteria(Case c) {
    //code here
    if ((c.Type == 'Mechanical' || c.Type == 'Electrical') && 
        c.Reason == 'Breakdown' && 
        c.Status == 'In Progress') {
        c.IsEscalated = true;  // Set IsEscalated to true if all conditions are met
    } else if (c.IsEscalated == false) {
        c.IsEscalated = false;
    }

}